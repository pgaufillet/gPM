<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.topcased.gpm</groupId>
        <artifactId>gPM-tools</artifactId>
        <version>1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>gPM-tools-instantiation
    </artifactId>
    <packaging>jar</packaging>
    <version>${gpm.version}</version>
    <name>gPM-tools instantiation</name>
    <url>/gPM-tools/gPM-tools-instantiation/
    </url>
    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.jar.version}</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>
                                org.topcased.gpm.instantiation.Instantiate
                            </mainClass>
                            <addClasspath>true</addClasspath>
                        </manifest>
                        <!--
                            <manifestEntries>
                            <Built-By>${gpm.jar.BuiltBy}</Built-By>
                            </manifestEntries>
                        -->
                    </archive>
                </configuration>
            </plugin>
        </plugins>
        
        <testResources>
            <testResource>
                <filtering>true</filtering>
                <directory>
                    ${pom.basedir}/src/test/filtered-resources/
                </directory>
            </testResource>
            <testResource>
                <filtering>false</filtering>
                <directory>
                    ${pom.basedir}/src/test/resources/
                </directory>
            </testResource>
        </testResources>
    </build>
    <dependencies>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>gPM-services-business</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>           
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>com.thoughtworks.xstream</groupId>
            <artifactId>xstream</artifactId>
        </dependency>
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
        </dependency>        
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>gPM-tools-dbUtils</artifactId>
        </dependency>
    </dependencies>
</project>

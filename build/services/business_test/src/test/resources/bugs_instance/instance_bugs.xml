	<!-- I18n's description  -->
	<translations>
		<translation lang="fr_FR">
			<message key="BUG_version_detection">
				Version de détection
			</message>
			<message key="BUG_date_detection">
				Date de détection
			</message>
			<message key="BUG_rapporteur">Rapporteur</message>
			<message key="BUG_priorite">Priorité</message>
			<message key="BUG_severite">Sévérité</message>
			<message key="BUG_version_resolution">
				A résoudre dans la version
			</message>
			<message key="BUG_description">Description du bug</message>
			<message key="BUG_fichier_attache">
				Fichier(s) attaché(s)
			</message>

			<message key="ANALYSE_description">
				Description du bug
			</message>
			<message key="ANALYSE_date_affectation">
				Date d'affectation
			</message>
			<message key="ANALYSE_affecte_a">Affecté à</message>
